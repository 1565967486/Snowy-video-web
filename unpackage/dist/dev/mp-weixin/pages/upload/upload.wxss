.select-box {
  position: relative;
  width: 100%;
  height: 450rpx;
}
.select-box .select-music {
    position: absolute;
    left: 0;
    right: 0;
    top: 45%;
    margin: 0 auto;
    width: 250rpx;
    height: 250rpx;
    border-radius: 50%;
}
.select-box .select-music .select-music-icon {
      font-size: 50rpx;
}
.info-box {
  margin-top: 40rpx;
  margin-bottom: 200rpx;
  height: 100%;
  width: 100%;
  background: #FFF;
  text-align: center;
}
.info-box .cover-image {
    width: 256rpx;
    height: 256rpx;
    border: 1px solid #ddd;
}
.info-box .audio {
    margin: 0 30rpx;
}
.container {
  height: 100vh;
  width: 100%;
  text-align: center;
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
      -ms-flex-direction: row;
          flex-direction: row;
  padding-top: 400rpx;
  background-color: #FFF;
}
.container .image {
    width: 300rpx;
    height: 300rpx;
}
.container .content {
    display: inline-block;
    height: 300rpx;
    padding-top: 100rpx;
    font-size: 44rpx;
    -webkit-box-flex: 1;
    -webkit-flex: 1;
        -ms-flex: 1;
            flex: 1;
}
.bgm-item {
  -o-text-overflow: ellipsis;
     text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}
.bgm-item .bgm-author {
    margin-left: 50rpx;
    font-size: 22rpx;
    color: #C8C7CC;
}
.step {
  height: 156rpx;
  background: -webkit-gradient(linear, left top, left bottom, color-stop(0, rgba(255, 255, 255, 0.2)), to(#FFF));
  background: -o-linear-gradient(rgba(255, 255, 255, 0.2) 0, #FFF 100%);
  background: linear-gradient(rgba(255, 255, 255, 0.2) 0, #FFF 100%);
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
}

